@page "/Account/Login"
@layout EmptyLayout

<PageTitle>Login | Examination Board</PageTitle>

<HeadContent>
    <link rel="stylesheet" href="/css/loginstyle.css">
</HeadContent>

<header class="navbar">
    <div class="logo">Examination Board</div>
    <nav>
        <a href="/">Home</a>
        <a href="/about">About Us</a>
    </nav>
</header>

<div class="login-page">
    <div class="login-box">
        <h1>Login</h1>

        <form action="/api/Login" method="post">
            <label>Email</label>
            <input type="email" name="email" placeholder="Enter your email" required>

            <label style="margin-top: 10px;">Password</label>
            <input type="password" name="password" placeholder="Enter your password" required>

            <button type="submit" style="margin-top: 20px;">
                <span>Login</span>
            </button>
        </form>

        <p class="note" style="margin-top: 20px; padding: 15px; background-color: #f0f8ff; border-radius: 5px; font-size: 0.85rem;">
            <strong>📝 Test Accounts:</strong><br />
            <span style="display: block; margin-top: 8px;">
                👨‍💼 Admin: <code style="background: #e8e8e8; padding: 2px 6px; border-radius: 3px;">admin@test.com</code> / <code style="background: #e8e8e8; padding: 2px 6px; border-radius: 3px;">Admin123</code>
            </span>
            <span style="display: block; margin-top: 5px;">
                👨‍🎓 Student: <code style="background: #e8e8e8; padding: 2px 6px; border-radius: 3px;">student@test.com</code> / <code style="background: #e8e8e8; padding: 2px 6px; border-radius: 3px;">Student123</code>
            </span>
        </p>

        <p class="note">
            Don't have an account? <a href="#">Contact your school / organization</a>
        </p>
    </div>
</div>

<footer>
    © Examination Board
</footer>