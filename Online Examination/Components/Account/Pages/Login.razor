@page "/Account/Login"
@layout EmptyLayout

<PageTitle>Login | Examination Board</PageTitle>

<HeadContent>
    <link rel="stylesheet" href="/css/loginstyle.css">
</HeadContent>

<header class="navbar">
    <div class="logo">Examination Board</div>
    <nav>
        <a href="/">Home</a>
        <a href="/about">About Us</a>
    </nav>
</header>

<div class="login-page">
    <div class="login-box">
        <h1>Login</h1>

        <form action="/api/Login" method="post">
            <label>Email</label>
            <input type="email" name="email" placeholder="Enter your email" required>

            <label style="margin-top: 10px;">Password</label>
            <input type="password" name="password" placeholder="Enter your password" required>

            <button type="submit" style="margin-top: 20px;">
                <span>Login</span>
            </button>
        </form>

        <div style="margin-top: 25px; text-align: center;">
            <p class="note" style="margin-bottom: 10px;">
                <a href="/Account/Register" style="color: #007bff; text-decoration: none; font-weight: 500;">
                    <i class="bi bi-person-plus"></i> Register as a new user
                </a>
            </p>
            <p class="note">
                <a href="/Account/ForgotPassword" style="color: #6c757d; text-decoration: none;">
                    <i class="bi bi-key"></i> Forgot your password?
                </a>
            </p>
            <p class="note" style="margin-top: 15px; font-size: 0.85rem; color: #6c757d;">
                Don't have an account? Contact your school or organization administrator.
            </p>
        </div>
    </div>
</div>

<footer>
    © Examination Board
</footer>
