@page "/exam-index"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@inject ExamService ExamService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

@using Online_Examination.Services
@using Online_Examination.Domain

<PageTitle>Exam Management | Examination Board</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="display-6 fw-bold text-dark">
                        <i class="bi bi-journal-text text-primary"></i> Exam Management
                    </h2>
                    <p class="text-muted">View and manage all examinations</p>
                </div>
                <div>
                    <a href="/admin/exam-create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Create New Exam
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading exams...</span>
            </div>
            <p class="mt-3 text-muted">Loading examination list...</p>
        </div>
    }
    else if (exams == null || !exams.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-5">
                        <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
                        <h4 class="mb-3">No Exams Found</h4>
                        <p class="text-muted mb-4">You haven't created any exams yet. Get started by creating your first examination.</p>
                        <a href="/admin/exam-create" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-plus-circle"></i> Create First Exam
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Search and Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Search exam by title..." 
                                           @bind="searchQuery"
                                           @bind:event="oninput" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select" @bind="filterStatus">
                                    <option value="All">All Status</option>
                                    <option value="Published">Published Only</option>
                                    <option value="Draft">Drafts Only</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <span class="badge bg-primary fs-6 p-2 w-100">
                                    @filteredExams.Count Exams
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Exam Cards Grid -->
        <div class="row">
            @foreach (var exam in filteredExams)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-header @(exam.IsPublished ? "bg-success" : "bg-secondary") text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge @(exam.IsPublished ? "bg-white text-success" : "bg-light text-secondary")">
                                    @(exam.IsPublished ? "Published" : "Draft")
                                </span>
                                <small>
                                    <i class="bi bi-calendar"></i> @exam.DateCreated.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-dark fw-bold mb-3">
                                <i class="bi bi-file-earmark-text text-primary"></i> @exam.Title
                            </h5>
                            
                            @if (!string.IsNullOrEmpty(exam.Description))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @(exam.Description.Length > 100 ? exam.Description.Substring(0, 100) + "..." : exam.Description)
                                </p>
                            }

                            <div class="row g-2 mb-3">
                                <div class="col-4">
                                    <div class="bg-light rounded p-2 text-center">
                                        <i class="bi bi-mortarboard text-primary"></i>
                                        <div class="fw-bold text-dark small">@GetLevelDisplayName(exam.Level)</div>
                                        <small class="text-muted">Level</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="bg-light rounded p-2 text-center">
                                        <i class="bi bi-clock text-warning"></i>
                                        <div class="fw-bold text-dark">@exam.TimeLimitMinutes min</div>
                                        <small class="text-muted">Time</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="bg-light rounded p-2 text-center">
                                        <i class="bi bi-question-circle text-info"></i>
                                        <div class="fw-bold text-dark">@(exam.Questions?.Count ?? 0)</div>
                                        <small class="text-muted">Questions</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Access Code:</small>
                                    <code class="bg-light px-2 py-1 rounded">@exam.AccessCode</code>
                                </div>
                            </div>

                            @if (exam.Creator != null)
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> Created by: @exam.Creator.Email
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white border-top">
                            <div class="d-flex gap-2">
                                <a href="/modify-exams/@exam.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteExam(exam.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- No Results Message -->
        @if (!filteredExams.Any() && exams.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> No exams match your search criteria. Try adjusting your filters.
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
    }
</style>

@code {
    private List<Exam> exams = new List<Exam>();
    private bool isLoading = true;
    private string searchQuery = string.Empty;
    private string filterStatus = "All";

    private List<Exam> filteredExams => exams
        .Where(e => string.IsNullOrEmpty(searchQuery) || 
                    e.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
        .Where(e => filterStatus == "All" || 
                   (filterStatus == "Published" && e.IsPublished) || 
                   (filterStatus == "Draft" && !e.IsPublished))
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadExams();
    }

    private async Task LoadExams()
    {
        try
        {
            isLoading = true;
            exams = await ExamService.GetAllExamsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading exams: {ex.Message}");
            exams = new List<Exam>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteExam(int examId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this exam? This action cannot be undone."))
        {
            return;
        }

        try
        {
            await ExamService.DeleteExamAsync(examId);
            await LoadExams();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting exam: {ex.Message}");
        }
    }

    private string GetLevelDisplayName(EducationLevel level)
    {
        return level switch
        {
            EducationLevel.PSLE => "PSLE",
            EducationLevel.N_O_Level => "N/O Level",
            EducationLevel.Poly => "Polytechnic",
            _ => level.ToString()
        };
    }
}

