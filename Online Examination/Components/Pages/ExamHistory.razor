@page "/exam-history"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject ExamService ExamService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

@using Online_Examination.Services
@using Online_Examination.Domain
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Exam History | Examination Board</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="display-6 fw-bold text-dark">
                <i class="bi bi-clock-history text-primary"></i> My Exam History
            </h2>
            <p class="text-muted">View your completed examinations and results</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading history...</span>
            </div>
            <p class="mt-3 text-muted">Loading your exam history...</p>
        </div>
    }
    else if (attempts == null || !attempts.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-5">
                        <i class="bi bi-inbox text-muted mb-3" style="font-size: 4rem;"></i>
                        <h4 class="mb-3">No Exam History Found</h4>
                        <p class="text-muted mb-4">You haven't taken any exams yet. Ready to get started?</p>
                        <a href="/student/join-exam" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-key-fill"></i> Join an Exam
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 text-dark">
                                <i class="bi bi-list-ul text-primary"></i> Your Examination Records
                            </h5>
                            <span class="badge bg-primary">@attempts.Count Total</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Exam Title</th>
                                        <th class="py-3">Score</th>
                                        <th class="py-3">Percentage</th>
                                        <th class="py-3">Date Taken</th>
                                        <th class="py-3 text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attempt in attempts)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-file-earmark-text text-primary me-2"></i>
                                                    <strong>@attempt.Exam?.Title</strong>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <span class="fw-bold text-dark">@attempt.Score</span>
                                                <span class="text-muted">/ @(attempt.Exam?.Questions?.Count ?? 0)</span>
                                            </td>
                                            <td class="py-3">
                                                @{
                                                    var percentage = CalculatePercentage(attempt);
                                                    var badgeClass = GetBadgeClass(percentage);
                                                }
                                                <span class="badge @badgeClass fs-6 px-3 py-2">@percentage%</span>
                                            </td>
                                            <td class="py-3 text-muted">
                                                @attempt.DateCreated.ToString("MMM dd, yyyy")
                                                <br />
                                                <small>@attempt.DateCreated.ToString("hh:mm tt")</small>
                                            </td>
                                            <td class="py-3 text-center">
                                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewResult(attempt.Id)">
                                                    <i class="bi bi-eye"></i> View Details
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Statistics Card -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4 mb-3 mb-md-0">
                                <i class="bi bi-clipboard-check text-primary" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-1 text-dark">@attempts.Count</h4>
                                <p class="text-muted small mb-0">Total Attempts</p>
                            </div>
                            <div class="col-md-4 mb-3 mb-md-0">
                                <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-1 text-dark">@averageScore%</h4>
                                <p class="text-muted small mb-0">Average Score</p>
                            </div>
                            <div class="col-md-4">
                                <i class="bi bi-trophy-fill text-success" style="font-size: 2rem;"></i>
                                <h4 class="mt-2 mb-1 text-dark">@bestScore%</h4>
                                <p class="text-muted small mb-0">Best Score</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <button class="btn btn-secondary btn-lg px-5 me-3" @onclick="GoToDashboard">
                    <i class="bi bi-house"></i> Back to Dashboard
                </button>
                <a href="/student/join-exam" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-key-fill"></i> Take Another Exam
                </a>
            </div>
        </div>
    }
</div>

@code {
    private List<Attempt> attempts = new List<Attempt>();
    private bool isLoading = true;
    private string? currentUserId;
    private int averageScore = 0;
    private int bestScore = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                if (!string.IsNullOrEmpty(currentUserId))
                {
                    attempts = await ExamService.GetUserAttemptsAsync(currentUserId);

                    if (attempts.Any())
                    {
                        CalculateStatistics();
                    }
                }
            }
            else
            {
                Navigation.NavigateTo("/Account/Login");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading exam history: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CalculateStatistics()
    {
        if (!attempts.Any()) return;

        var totalScore = 0;
        var totalPossible = 0;
        var bestPercentage = 0.0;

        foreach (var attempt in attempts)
        {
            var examQuestions = attempt.Exam?.Questions?.Count ?? 0;
            if (examQuestions > 0)
            {
                totalScore += attempt.Score;
                totalPossible += examQuestions;

                var percentage = (double)attempt.Score / examQuestions * 100;
                if (percentage > bestPercentage)
                {
                    bestPercentage = percentage;
                }
            }
        }

        if (totalPossible > 0)
        {
            averageScore = (int)Math.Round((double)totalScore / totalPossible * 100);
        }

        bestScore = (int)Math.Round(bestPercentage);
    }

    private double CalculatePercentage(Attempt attempt)
    {
        var totalQuestions = attempt.Exam?.Questions?.Count ?? 0;
        if (totalQuestions > 0)
        {
            return Math.Round((double)attempt.Score / totalQuestions * 100, 1);
        }
        return 0;
    }

    private string GetBadgeClass(double percentage)
    {
        if (percentage >= 80) return "bg-success";
        if (percentage >= 60) return "bg-primary";
        if (percentage >= 40) return "bg-warning";
        return "bg-danger";
    }

    private void ViewResult(int attemptId)
    {
        Navigation.NavigateTo($"/student/exam-result/{attemptId}");
    }

    private void GoToDashboard()
    {
        Navigation.NavigateTo("/user-dashboard");
    }
}
